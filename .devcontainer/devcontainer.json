{
    "name": "CUDA OpenACC GCC13 Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all"
    ],
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/usr/local/cuda/bin:/opt/gcc-13/bin",
        "LD_LIBRARY_PATH": "${containerEnv:LD_LIBRARY_PATH}:/opt/gcc-13/lib64:/usr/local/cuda/lib64:/usr/local/cuda/extras/CUPTI/lib64"
    },
    "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "bazelbuild.vscode-bazel",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "xaver.clang-format",
                "gruntfuggly.todo-tree",
                "mhutchie.git-graph",
                "github.copilot"
            ]
        }
    }
}

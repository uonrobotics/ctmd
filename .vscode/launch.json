  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cpp: Launch Debug",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "Bazel Build (Debug)",
      "program": "${workspaceFolder}/bazel-bin/${relativeFileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
    },
  ]
}
